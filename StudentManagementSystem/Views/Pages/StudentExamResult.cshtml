@{
    ViewData["Title"] = "Exam Details";
}

<div class="text-center">
    <section class="content">
        <div class="container-fluid">
            <!-- Filter Section -->
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card card-primary mt-5">
                        <div class="card-header">
                            <h3 class="card-title">Filter Exams by Student and Course</h3>
                        </div>
                        <div class="card-body">
                            <!-- Student Dropdown -->
                            <div class="form-group">
                                <label for="studentSelect">Select Student</label>
                                <select class="form-control" id="studentDropdown">
                                    <option value="">-- Select Student --</option>
                                    <!-- Students will be loaded dynamically -->
                                </select>
                            </div>
                            <!-- Course Dropdown -->
                            <div class="form-group">
                                <label for="courseSelect">Select Course</label>
                                <select class="form-control" id="courseDropdown">
                                    <option value="">-- Select Course --</option>
                                    <!-- Courses will be loaded dynamically -->
                                </select>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="button" id="filterbtn" onclick="filterExams()" class="btn btn-primary">Filter Exams</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Exam Details Section -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title">Exam Details</h6>
                        </div>
                        <div class="card-body table-responsive p-0" id="examDataTable" style="display:none;">
                            <table class="table table-hover text-nowrap" id="examTable">
                                <thead>
                                    <tr>
                                        <th>Exam Name</th>
                                        <th>Exam Date</th>
                                        <th>Marks</th>
                                    </tr>
                                </thead>
                                <tbody id="examTableBody">
                                    <!-- Exam details will be loaded here dynamically -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

